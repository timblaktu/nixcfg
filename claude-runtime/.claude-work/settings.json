{
  "env": {
    "ANTHROPIC_BASE_URL": "https://codecompanionv2.d-dp.nextcloud.aero",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "qwen-a3b",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "devstral",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "devstral",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "permissions": {
    "allow": [
      "Bash",
      "mcp__context7",
      "mcp__mcp-nixos",
      "mcp__sequential-thinking",
      "mcp__serena",
      "Read",
      "Write",
      "Edit",
      "WebFetch"
    ],
    "deny": [
      "Search",
      "Find",
      "Bash(rm -rf /*)"
    ],
    "ask": [],
    "defaultMode": "default",
    "additionalDirectories": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "mkdir -p \"$(dirname \"$HOME/.claude/logs/tool-usage.log\")\"\necho \"$(date): Tool used in $(pwd)\" >> \"$HOME/.claude/logs/tool-usage.log\"\n",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "file_path=\"$1\"\nfor pattern in \\\\.env \\\\.secrets id_rsa \\\\.key$; do\n  if echo \"$file_path\" | grep -qE \"$pattern\"; then\n    echo \"ðŸš« Security: Access blocked to sensitive file pattern: $pattern\"\n    exit 1\n  fi\ndone\n",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [],
    "Stop": []
  },
  "statusLine": {
    "type": "command",
    "command": "claude-statusline-powerline",
    "padding": 0
  },
  "projectOverrides": {
    "enabled": true,
    "searchPaths": [
      ".claude/settings.json",
      ".claude.json",
      "claude.config.json"
    ]
  }
}
